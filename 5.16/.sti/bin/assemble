#	do
#		# Skipping well-known perl pragmas
#		for element in ${EXCLUDED_PRAGMAS[@]}; do
#			[[ $element == $f ]] && continue 2
#		done
#
#		DISABLE_TEST="-n"
#		if [ -z "${ENABLE_CPAN_TESTS}" ]
#		then
#			echo ".openshift/markers/enable_cpan_tests!  enabling default cpan tests" 1>&2
#			DISABLE_TEST=""
#		fi
